<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <servlet-class>com.my.servlet.UpdateCategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProductServlet</servlet-name>
        <servlet-class>com.my.servlet.UpdateProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerRegisterServlet</servlet-name>
        <servlet-class>com.my.servlet.CustomerRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.my.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateBalanceSourceServlet</servlet-name>
        <servlet-class>com.my.servlet.UpdateBalanceSourceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateNewsServlet</servlet-name>
        <servlet-class>com.my.servlet.UpdateNewsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyBalanceServlet</servlet-name>
        <servlet-class>com.my.servlet.BuyBalanceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderCartServlet</servlet-name>
        <servlet-class>com.my.servlet.OrderCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddOrderCartServlet</servlet-name>
        <servlet-class>com.my.servlet.AddOrderCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCustomerInfoServlet</servlet-name>
        <servlet-class>com.my.servlet.UpdateCustomerInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProductServlet</servlet-name>
        <servlet-class>com.my.servlet.SearchProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <url-pattern>/UpdateCategoryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProductServlet</servlet-name>
        <url-pattern>/UpdateProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerRegisterServlet</servlet-name>
        <url-pattern>/CustomerRegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateBalanceSourceServlet</servlet-name>
        <url-pattern>/UpdateBalanceSourceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyBalanceServlet</servlet-name>
        <url-pattern>/BuyBalanceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderCartServlet</servlet-name>
        <url-pattern>/OrderCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddOrderCartServlet</servlet-name>
        <url-pattern>/AddOrderCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCustomerInfoServlet</servlet-name>
        <url-pattern>/UpdateCustomerInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateNewsServlet</servlet-name>
        <url-pattern>/UpdateNewsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProductServlet</servlet-name>
        <url-pattern>/SearchProductServlet</url-pattern>
    </servlet-mapping>
